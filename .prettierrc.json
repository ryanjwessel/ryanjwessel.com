{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": false,
	"trailingComma": "all",
	"printWidth": 80,
	"proseWrap": "always",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"trailingComma": "none"
			}
		},
		{
			"files": [
				"*.md"
			],
			"options": {
				"parser": "markdown"
			}
		}
	]
}